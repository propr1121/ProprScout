# ProprScout/ProprHome Environment Variables
# Copy this to .env and fill in your values

# ===========================================
# FRONTEND (Vite) - Must use VITE_ prefix
# ===========================================

# Map APIs - Client-side
VITE_GOOGLE_MAPS_API_KEY=
VITE_MAPBOX_TOKEN=

# API Endpoints
VITE_API_URL=http://localhost:3002

# ===========================================
# BACKEND (Node.js)
# ===========================================

# Server
NODE_ENV=development
PORT=3002

# MongoDB
MONGODB_URI=

# Authentication
JWT_SECRET=
JWT_EXPIRES_IN=24h
SESSION_SECRET=

# AI/ML APIs
ANTHROPIC_API_KEY=
FIRECRAWL_API_KEY=

# Cloud Storage
CLOUDINARY_URL=

# OAuth (Google SSO)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OAuth (LinkedIn SSO)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Frontend URL for redirects
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Beta Mode
REQUIRE_INVITE_CODE=true

# ===========================================
# GEOLOCATION SERVICE (Python/Flask)
# ===========================================

FLASK_ENV=development
FLASK_PORT=3001

# ===========================================
# SECURITY NOTES
# ===========================================
# - NEVER commit real API keys to git
# - Use strong random values for JWT_SECRET and SESSION_SECRET (32+ chars)
# - Restrict API keys by domain/IP in provider dashboards
# - Google Maps: Restrict to your domains only
# - Mapbox: Enable domain restrictions
