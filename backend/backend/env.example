# ProprScout Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Production Configuration (uncomment and update for production)
# NODE_ENV=production
# PORT=3001
# FRONTEND_URL=https://proprscout.com
# API_URL=https://api.proprscout.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/proprscout
DB_HOST=localhost
DB_PORT=5432
DB_NAME=proprscout
DB_USER=username
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Cloudinary Configuration
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# GeoCLIP Configuration
GEOCLIP_MODEL_PATH=./models/geoclip
GEOCLIP_CACHE_SIZE=1000

# Nominatim Configuration
NOMINATIM_BASE_URL=https://nominatim.openstreetmap.org
NOMINATIM_USER_AGENT=ProprScout/1.0.0
NOMINATIM_EMAIL=your-email@example.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
JWT_SECRET=your-super-secret-jwt-key
SESSION_SECRET=your-super-secret-session-key

# Google OAuth Configuration
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback
# Production: GOOGLE_CALLBACK_URL=https://api.proprscout.com/api/auth/google/callback

# LinkedIn OAuth Configuration
# Get credentials from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_CALLBACK_URL=http://localhost:3001/api/auth/linkedin/callback
# Production: LINKEDIN_CALLBACK_URL=https://api.proprscout.com/api/auth/linkedin/callback

# External APIs
IDEALISTA_API_KEY=
IMOVIRTUAL_API_KEY=
OLX_API_KEY=
SUPERCASA_API_KEY=

# AI Configuration (Anthropic Claude)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
