# ProprScout Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real secrets to git

# ===========================================
# REQUIRED - Server will fail without these
# ===========================================

# Server Configuration
NODE_ENV=production
PORT=3002
FRONTEND_URL=https://proprscout.com

# Database (MongoDB required)
MONGODB_URI=mongodb://localhost:27017/proprscout

# Security Secrets (REQUIRED - generate strong random strings)
# Generate with: openssl rand -base64 32
JWT_SECRET=GENERATE_A_32_CHAR_RANDOM_STRING_HERE
SESSION_SECRET=GENERATE_ANOTHER_32_CHAR_RANDOM_STRING_HERE

# AI Services (at least one required)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# ===========================================
# OAUTH - Required for SSO login
# ===========================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://proprscout.com/api/auth/google/callback

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_CALLBACK_URL=https://proprscout.com/api/auth/linkedin/callback

# ===========================================
# OPTIONAL - Features may be limited without
# ===========================================

# Redis (for caching - falls back to in-memory)
REDIS_URL=redis://localhost:6379

# PostgreSQL (optional secondary database)
DATABASE_URL=postgresql://user:pass@localhost:5432/proprscout

# Firecrawl (for web scraping fallback)
FIRECRAWL_API_KEY=fc-your-key-here

# Cloudinary (for image uploads)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_live_your-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Geolocation Service
GEOLOCATION_URL=http://localhost:3001

# ===========================================
# FEATURE FLAGS
# ===========================================

# Beta mode - require invite codes for registration
REQUIRE_INVITE_CODE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT Token Expiry
JWT_EXPIRES_IN=7d
